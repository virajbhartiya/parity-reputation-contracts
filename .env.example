# Filecoin Calibration Network Configuration

# Network Details
FILECOIN_CALIBRATION_CHAIN_ID=314159
FILECOIN_CALIBRATION_RPC_URL=https://api.calibration.node.glif.io/rpc/v1
FILECOIN_CALIBRATION_EXPLORER_URL=https://calibration.filfox.info/en
FILECOIN_CALIBRATION_BLOCKSCOUT_URL=https://filecoin-testnet.blockscout.com
FILECOIN_CALIBRATION_FAUCET_URL=https://faucet.calibnet.chainsafe-fil.io

# Alternative RPC URLs (backup)
FILECOIN_CALIBRATION_RPC_URL_BACKUP=https://api.calibration.node.glif.io/rpc/v0
FILECOIN_CALIBRATION_RPC_URL_V1=https://api.calibration.node.glif.io

# WebSocket Endpoints
FILECOIN_CALIBRATION_WSS_URL=wss://wss.calibration.node.glif.io

# API Keys (optional - add your API keys here)
FILECOIN_CALIBRATION_API_KEY=your_filecoin_api_key_here
BLOCKSCOUT_API_KEY=your_blockscout_api_key_here

# Deployment Configuration
# IMPORTANT: Never commit your private key to version control!
# Generate a new wallet for testing: https://metamask.io/
DEPLOYER_PRIVATE_KEY=0xyour_private_key_here_with_0x_prefix
DEPLOYER_ADDRESS=your_wallet_address_here

# Contract Addresses (will be filled after deployment)
RUNNER_REPUTATION_CONTRACT_ADDRESS=contract_address_after_deployment

# Gas Configuration
DEFAULT_GAS_LIMIT=8000000
DEFAULT_GAS_PRICE=1000000000

# Test Configuration (optional - for convenience during testing)
# TEST_RUNNER_ID=test_runner_001
# TEST_WALLET_ADDRESS=0x742d35Cc6634C0532925a3b8D918D6E9C7E5b5a4

# IPFS Configuration
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key

# Monitoring Configuration
MONITORING_ENABLED=true
MONITORING_INTERVAL=300

# Network Specific Settings
NETWORK_NAME=Filecoin Calibration
NETWORK_CURRENCY=FIL
NETWORK_CURRENCY_DECIMALS=18

# Development Settings
DEBUG_MODE=true
VERBOSE_LOGGING=true

# Instructions:
# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in your private key and addresses
